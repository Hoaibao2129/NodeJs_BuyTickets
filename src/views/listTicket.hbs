<h1 style='text-align: center ; margin-top: 40px;'>CÁC TRẬN ĐẤU ĐANG MỞ BÁN VÉ</h1>

<table class='table mt-4'>
  <thead>
    <tr>
      <th scope='col'>#</th>
      <th scope='col'>CLB</th>
      <th scope='col'>NGÀY THI ĐẤU</th>
      <th scope='col'>GIỜ THI ĐẤU</th>
      <th scope='col'>GIÁ VÉ</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each ticket}}
      <tr>
        <th scope='row'>{{sum @index 1}}</th>
        <td>{{this.clb}}</td>
        <td>{{this.day}}</td>
        <td>{{this.time}}</td>
        <td>{{this.price}}</td>
        <td><a href='/ticket/buy/{{this._id}}'><button
              type='button'
              class='btn btn-primary'
            >ĐẶT VÉ</button></a></td>

      </tr>
    {{/each}}
  </tbody>
</table>